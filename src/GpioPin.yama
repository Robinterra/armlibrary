namespace "ARM.CortexM.Advanced"
{
    using "System";
    using "System.IO";

    public primitive class GpioPin
    {

        // -----------------------------------------------

        #region vars

        // -----------------------------------------------

        public Gpio gpioPort;
        public int pin;

        // -----------------------------------------------

        #endregion vars

        // -----------------------------------------------

        #region ctor

        // -----------------------------------------------

        public this new ( Gpio gpio, int pin )
        {
            this.gpioPort = gpio;
            this.pin = pin;
            this;
        }

        // -----------------------------------------------

        public this ~ (  )
        {

        }

        // -----------------------------------------------

        #endregion ctor

        // -----------------------------------------------

        #region methods

        // -----------------------------------------------

        public int Read (  )
        {
            this.gpioPort.Read ( this.pin );
        }

        // -----------------------------------------------

        public bool ChangeMode ( int mode )
        {
            this.gpioPort.InitPort ( this.pin, mode );
        }

        // -----------------------------------------------

        public bool Write ( int value )
        {
            this.gpioPort.Write ( this.pin, value );
        }

        // -----------------------------------------------

        #endregion methods

        // -----------------------------------------------

    }
}
